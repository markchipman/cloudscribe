@model cloudscribe.Core.IdentityServerIntegration.Models.NewApiScopeViewModel
@using cloudscribe.Core.IdentityServerIntegration
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<CloudscribeIds4Resources> sr
<form class="form-inline" asp-controller="ApiResource" asp-action="AddApiScope">
    <div class="form-group">
        <label asp-for="Name">@sr["Name"]</label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisplayName">@sr["Display Name"]</label>
        <input class="form-control" asp-for="DisplayName" />
    </div>
    <div class="form-group">
        <label asp-for="Description">@sr["Description"]</label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <div>
            <div class="checkbox">
                <label>
                    <input asp-for="Emphasize" /> @sr["Emphasize"]
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <div class="checkbox">
                <label>
                    <input asp-for="Required" /> @sr["Required"]
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <div class="checkbox">
                <label>
                    <input asp-for="ShowInDiscoveryDocument" /> @sr["Show In Discovery Document"]
                </label>
            </div>
        </div>
    </div>
    <input asp-for="SiteId" type="hidden" />
    <input asp-for="ApiName" type="hidden" />
    <button type="submit" class="btn btn-default">@sr["Add Scope"]</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
